# ERPNext v15 Production Environment Configuration
# Copy this file to .env and configure with your production settings

# =============================================================================
# SITE CONFIGURATION
# =============================================================================
SITE_NAME=your-domain.com
# For local testing, use: SITE_NAME=frontend
# For production, use your domain: SITE_NAME=yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
DB_PASSWORD=your_very_strong_database_password_here
DB_ROOT_PASSWORD=your_very_strong_root_password_here
DB_HOST=db
DB_PORT=3306
DB_NAME=

# =============================================================================
# ADMIN USER
# =============================================================================
ADMIN_PASSWORD=your_admin_password_here
# This will be the password for Administrator user

# =============================================================================
# PORT CONFIGURATION
# =============================================================================
HTTP_PUBLISH_PORT=80
HTTPS_PUBLISH_PORT=443
# For development/testing, you might want to use:
# HTTP_PUBLISH_PORT=8080
# HTTPS_PUBLISH_PORT=8443

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_CACHE_HOST=redis-cache:6379
REDIS_QUEUE_HOST=redis-queue:6379

# =============================================================================
# EMAIL CONFIGURATION (IMPORTANT FOR PRODUCTION)
# =============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_SSL=true
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=your_email@gmail.com

# For other email providers:
# Gmail: smtp.gmail.com:587 (use app password)
# Outlook: smtp-mail.outlook.com:587
# Yahoo: smtp.mail.yahoo.com:587

# =============================================================================
# SSL/HTTPS CONFIGURATION (for production with domain)
# =============================================================================
# Uncomment and configure for SSL setup
# LETSENCRYPT_EMAIL=your@email.com
# TRAEFIK_DOMAIN=yourdomain.com
# ACME_CA_SERVER=https://acme-v02.api.letsencrypt.org/directory

# =============================================================================
# CUSTOM APPS CONFIGURATION
# =============================================================================
# This contains base64 encoded apps.json with all custom apps
APPS_JSON_

# =============================================================================
# FRAPPE/ERPNEXT VERSION
# =============================================================================
ERPNEXT_VERSION=v15.78.1
FRAPPE_VERSION=v15.81.0

# =============================================================================
# CONTAINER CONFIGURATION
# =============================================================================
# Timezone
TIMEZONE=Asia/Bangkok

# User ID for file permissions
USER_ID=1000
GROUP_ID=1000

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Backup location on host
BACKUP_DIR=./backups

# Automatic backup schedule (using cron syntax)
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# =============================================================================
# LOGGING CONFIGURATION  
# =============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Set to true for production
FORCE_SSL=false
# Set to true if using reverse proxy
USE_REVERSE_PROXY=false

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Worker processes
WORKER_SHORT=1
WORKER_LONG=1
WORKER_DEFAULT=1

# Database connections
DB_MAX_CONNECTIONS=100

# Redis memory limit
REDIS_MAXMEMORY=256mb

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS (disable for production)
# =============================================================================
DEVELOPER_MODE=0
# Set to 1 only for development

# Enable/disable scheduler
ENABLE_SCHEDULER=1

# =============================================================================
# ADDITIONAL PRODUCTION SETTINGS
# =============================================================================
# Session timeout (in seconds)
SESSION_TIMEOUT=3600

# File upload limits
MAX_FILE_SIZE=25mb
MAX_ATTACHMENT_SIZE=25mb

# Enable maintenance mode
MAINTENANCE_MODE=0